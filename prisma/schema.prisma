generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  emailVerified DateTime?
  image         String?
  xp            Int       @default(0)
  streak        Int       @default(0)
  lastActiveAt  DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts    Account[]
  sessions    Session[]
  courses     Course[]
  attempts    Attempt[]
  progress    Progress[]
  reviewQueue ReviewQueue[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  sections Section[]
  chunks   Chunk[]
  uploads  Upload[]
}

model Section {
  id       String  @id @default(cuid())
  courseId  String
  parentId String?
  title    String
  level    Int
  order    Int     @default(0)

  course   Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  parent   Section?  @relation("SectionTree", fields: [parentId], references: [id])
  children Section[] @relation("SectionTree")
  chunks   Chunk[]
  progress Progress[]
  attempts Attempt[]

  @@index([courseId])
}

model Chunk {
  id         String  @id @default(cuid())
  courseId    String
  sectionId  String?
  type       String
  content    String
  language   String?
  metadata   String?
  tokenCount Int     @default(0)
  embedding  String?

  createdAt DateTime @default(now())

  course  Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  section Section? @relation(fields: [sectionId], references: [id], onDelete: SetNull)

  @@index([courseId])
  @@index([sectionId])
}

model Upload {
  id        String   @id @default(cuid())
  courseId  String
  fileName  String
  filePath  String
  fileType  String
  fileSize  Int
  status    String   @default("pending")
  error     String?
  createdAt DateTime @default(now())

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Attempt {
  id         String   @id @default(cuid())
  userId     String
  sectionId  String
  mode       String
  question   String
  answer     String?
  userAnswer String?
  correct    Boolean?
  score      Float?
  difficulty String   @default("medium")
  timeMs     Int?
  chunkIds   String   @default("[]")
  feedback   String?
  createdAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@index([userId, sectionId])
}

model Progress {
  id        String @id @default(cuid())
  userId    String
  sectionId String
  mastery   Float  @default(0)
  xpEarned  Int    @default(0)
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@unique([userId, sectionId])
}

model ReviewQueue {
  id          String   @id @default(cuid())
  userId      String
  attemptId   String
  nextReview  DateTime @default(now())
  interval    Int      @default(1)
  easeFactor  Float    @default(2.5)
  repetitions Int      @default(0)
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, nextReview])
}
